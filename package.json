{
  "name": "3d-component",
  "version": "2.0.2",
  "type": "module",
  "main": "index.js",
  "repository": "https://github.com/pandasuite/3d-component.git",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "rm -rf ./pandasuite-component.zip && vite build && cd build && zip -r -X '../pandasuite-component.zip' *",
    "release": "yarn build && release-it --no-npm.publish"
  },
  "devDependencies": {
    "eslint": "^9.18.0",
    "release-it": "^19.2.4",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "@google/model-viewer": "^4.1.0",
    "focus-visible": "^5.2.0",
    "pandasuite-bridge": "^5.0.5",
    "three": "^0.172.0"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "pandasuite-component.zip"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "Chrome >= 87",
      "Android >= 5",
      "iOS >= 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
