    {
      "id": "environment",
      "name": "Environment image",
      "locale_name": {
        "fr_FR": "Image d'environnement"
      },
      "type": "Dropdown",
      "value": "neutral",
      "items": [
        {
          "id": "neutral",
          "name": "Neutral"
        },
        {
          "id": "legacy",
          "name": "Legacy"
        },
        {
          "id": "custom",
          "name": "Custom"
        }
