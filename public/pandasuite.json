      "type": "Boolean",
      "value": true,
      "separator": true
    },
    {
      "id": "interactionPromptThreshold",
      "name": "Delay",
      "locale_name": {
        "fr_FR": "Délai"
      },
      "type": "Integer",
      "value": 3000,
      "hidden": "!properties.interactionPrompt.value"
