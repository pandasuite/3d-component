    {
      "id": "toneMapping",
      "name": "Tone mapping",
      "locale_name": {
        "fr_FR": "Mapping de ton"
      },
      "type": "Dropdown",
      "value": "aces",
      "items": [
        {
          "id": "aces",
          "name": "ACES"
        },
        {
          "id": "agx",
          "name": "AGX"
        },
        {
          "id": "neutral",
          "name": "Neutral"
        }
      ]
    },
    {
      "id": "interactionPrompt",
      "name": "Interaction prompt",
      "locale_name": {
        "fr_FR": "Inciter à l'action"
