      "type": "Float",
      "value": 0,
      "restrict": {
        "min": 0.0,
        "max": 2.0,
        "step": 0.01,
        "stepShift": 0.1
      },
      "bindable": true
    },
    {
      "id": "shadowSoftness",
      "name": "Shadow softness",
      "locale_name": {
        "fr_FR": "Douceur des ombres"
