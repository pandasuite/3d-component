{
  "version": "2.0.0",
  "main": "",

  "system": {
    "localization": false,
    "actions": [
      {
        "id": "toMarker",
        "name": "Change Position",
        "locale_name": {
          "fr_FR": "Changement position"
        }
      }
    ],
    "events": [
      {
        "id": "triggerMarker",
        "name": "Position",
        "locale_name": {
          "fr_FR": "Position"
        }
      }
    ],
    "markers": [
      {
        "hideSystemId": true
      }
    ],
    "defaults": {
      "markers": {
        "description": {
          "value": "[%s, %s, %s]",
          "args": [
            {
              "key": "theta",
              "format": "0.[00000]"
            },
            {
              "key": "phi",
              "format": "0.[00000]"
            },
            {
              "key": "radius",
              "format": "0.[00000]"
            }
          ]
        }
      }
    }
  },

  "properties": [
    {
      "id": "path",
      "name": "File name",
      "locale_name": {
        "fr_FR": "Nom du fichier"
      },
      "type": "String",
      "value": "Astronaut.glb",
      "bindable": true,
      "required": true
    },
    {
      "id": "arMode",
      "name": "AR (if available)",
      "locale_name": {
        "fr_FR": "AR (si disponible)"
      },
      "type": "Boolean",
      "value": true,
      "separator": true
    },
    {
      "id": "arModeIOS",
      "name": "iOS support",
      "locale_name": {
        "fr_FR": "Support iOS"
      },
      "type": "Boolean",
      "value": false,
      "hidden": "!properties.arMode.value"
    },
    {
      "id": "arPath",
      "name": "USDZ File name",
      "locale_name": {
        "fr_FR": "Nom du fichier USDZ"
      },
      "type": "String",
      "value": "Astronaut.usdz",
      "hidden": "!properties.arMode.value || !properties.arModeIOS.value",
      "bindable": true
    },
    {
      "id": "cameraControls",
      "name": "Camera controls",
      "locale_name": {
        "fr_FR": "Contrôle de la caméra"
      },
      "type": "Boolean",
      "value": true,
      "separator": true,
      "bindable": true
    },
    {
      "id": "animateMarkers",
      "name": "Animate markers position",
      "locale_name": {
        "fr_FR": "Transition animée entre marqueurs"
      },
      "type": "Boolean",
      "value": true,
      "bindable": true
    },
    {
      "id": "lookInside",
      "name": "Allow look inside",
      "locale_name": {
        "fr_FR": "Permettre de regarder à l'intérieur"
      },
      "type": "Boolean",
      "value": false,
      "bindable": true
    },
    {
      "id": "pan",
      "name": "Allow pan",
      "locale_name": {
        "fr_FR": "Permettre le déplacement"
      },
      "type": "Boolean",
      "value": false,
      "bindable": true
    },
    {
      "id": "interactionPrompt",
      "name": "Interaction prompt",
      "locale_name": {
        "fr_FR": "Inciter à l'action"
      },
      "type": "Boolean",
      "value": true,
      "separator": true
    },
    {
      "id": "interactionPromptThreshold",
      "name": "Delay",
      "locale_name": {
        "fr_FR": "Délai"
      },
      "type": "Integer",
      "value": 3000,
      "hidden": "!properties.interactionPrompt.value"
    },
    {
      "id": "autoRotate",
      "name": "Auto rotate",
      "locale_name": {
        "fr_FR": "Rotation automatique"
      },
      "type": "Boolean",
      "value": false,
      "separator": true
    },
    {
      "id": "autoRotateDelay",
      "name": "Delay",
      "locale_name": {
        "fr_FR": "Délai"
      },
      "type": "Integer",
      "value": 3000,
      "hidden": "!properties.autoRotate.value"
    }
  ],

  "events": [
    {
      "id": "modelLoaded",
      "name": "Model Loaded",
      "locale_name": {
        "fr_FR": "Modèle chargé"
      }
    },
    {
      "id": "modelError",
      "name": "Model Error",
      "locale_name": {
        "fr_FR": "Erreur de modèle"
      }
    },
    {
      "id": "onStartingPlay",
      "name": "Starting play",
      "locale_name": {
        "fr_FR": "Commence lecture"
      }
    },
    {
      "id": "onPausePlaying",
      "name": "Pause playing",
      "locale_name": {
        "fr_FR": "Mise en pause"
      }
    },
    {
      "id": "onTouchStart",
      "name": "Start of user interaction",
      "locale_name": {
        "fr_FR": "Début de l’interaction utilisateur"
      }
    },
    {
      "id": "onTouchEnd",
      "name": "End of user interaction",
      "locale_name": {
        "fr_FR": "Fin de l’interaction utilisateur"
      }
    },
    {
      "id": "arError",
      "name": "AR Error",
      "locale_name": {
        "fr_FR": "Erreur d'AR"
      }
    }
  ],

  "actions": [
    {
      "id": "play",
      "name": "Play",
      "locale_name": {
        "fr_FR": "Lecture"
      }
    },
    {
      "id": "pause",
      "name": "Pause",
      "locale_name": {
        "fr_FR": "Mettre en pause"
      }
    },
    {
      "id": "activateAR",
      "name": "Activate AR",
      "locale_name": {
        "fr_FR": "Activer l'AR"
      }
    }
  ],

  "synchronization": [
    {
      "id": "synchroMarkers",
      "name": "Synchronize markers",
      "locale_name": {
        "fr_FR": "Synchroniser markers"
      }
    }
  ],

  "resources": [
    {
      "id": "assets.zip",
      "type": "Zip",
      "required": true
    }
  ]
}
