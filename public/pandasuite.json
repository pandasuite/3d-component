{
  "version": "2.0.0",
  "main": "",

  "system": {
    "localization": false,
    "actions": [
      {
        "id": "toMarker",
        "name": "Change Camera",
        "locale_name": {
          "fr_FR": "Changement Caméra"
        }
      }
