{
  "version": "2.0.0",
  "main": "",

  "system": {
    "localization": false,
    "actions": [
      {
        "id": "toMarker",
        "name": "Change Position",
        "locale_name": {
          "fr_FR": "Changement position"
        }
      }
    ],
    "events": [
      {
        "id": "triggerMarker",
        "name": "Position",
        "locale_name": {
          "fr_FR": "Position"
        }
      }
    ],
    "markers": [
      {
        "hideSystemId": true,
        "params": [
          {
            "id": "color",
            "name": "Color",
            "locale_name": {
              "fr_FR": "Couleur"
            },
            "type": "Color",
            "value": "#3b82f6",
            "bindable": true,
            "hidden": "marker.type != 'hotspot'"
          },
          {
            "id": "size",
            "name": "Size",
            "locale_name": {
              "fr_FR": "Taille"
            },
            "type": "Integer",
            "value": 20,
            "restrict": {
              "min": 10,
              "max": 100,
              "step": 5,
              "stepShift": 10
            },
            "bindable": true,
            "hidden": "marker.type != 'hotspot'"
          },
          {
            "id": "minOpacity",
            "name": "Min opacity",
            "locale_name": {
              "fr_FR": "Opacité min"
            },
            "type": "Float",
            "value": 0.25,
            "restrict": {
              "min": 0.0,
              "max": 1.0,
              "step": 0.1,
              "stepShift": 0.2
            },
            "separator": true,
            "bindable": true,
            "hidden": "marker.type != 'hotspot'"
          },
          {
            "id": "maxOpacity",
            "name": "Max opacity",
            "locale_name": {
              "fr_FR": "Opacité max"
            },
            "type": "Float",
            "value": 1,
            "restrict": {
              "min": 0.0,
              "max": 1.0,
              "step": 0.1,
              "stepShift": 0.2
            },
            "bindable": true,
            "hidden": "marker.type != 'hotspot'"
          },
          {
            "id": "showAnnotation",
            "name": "Show annotation",
            "locale_name": {
              "fr_FR": "Afficher annotation"
            },
            "type": "Boolean",
            "value": false,
            "hidden": "marker.type != 'hotspot'",
            "bindable": true,
            "separator": true
          },
          {
            "id": "description",
            "name": "Message",
            "locale_name": {
              "fr_FR": "Message"
            },
            "type": "String",
            "hidden": "!marker.showAnnotation",
            "bindable": true
          },
          {
            "id": "annotationColor",
            "name": "Color",
            "locale_name": {
              "fr_FR": "Couleur"
            },
            "type": "Color",
            "value": "#ffffff",
            "bindable": true,
            "hidden": "!marker.showAnnotation"
          },
          {
            "id": "annotationTextColor",
            "name": "Text color",
            "locale_name": {
              "fr_FR": "Couleur du texte"
            },
            "type": "Color",
            "value": "#000000",
            "bindable": true,
            "hidden": "!marker.showAnnotation"
          }
        ]
      }
    ],
    "defaults": {
      "markers": {
        "description": {
          "value": "[%s]",
          "args": [
            {
              "key": "type"
            }
          ]
        }
      }
    }
  },

  "properties": [
    {
      "id": "path",
      "name": "File name",
      "locale_name": {
        "fr_FR": "Nom du fichier"
      },
      "type": "String",
      "placeholder": "Astronaut.glb",
      "bindable": true,
      "required": true
